{% extends 'base.html.twig' %}

{% block body %}

<div class="wrapper">
    <div class="sidebar" data-color="blue" data-image="{{ asset('images/sidebar-5.jpg') }}">

    <!--

        Tip 1: you can change the color of the sidebar using: data-color="blue | azure | green | orange | red | purple"
