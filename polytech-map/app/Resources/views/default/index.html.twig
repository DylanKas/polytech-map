</script>

  <script>

  function scrollTop(duration) {
	    var start = window.scrollY || document.documentElement.scrollTop,
	        currentTime = null;

	    var animateScroll = function(timestamp){
	    	if (!currentTime) currentTime = timestamp;
	        var progress = timestamp - currentTime;
	        var val = Math.max(Math.easeInOutQuad(progress, start, -start, duration), 0);
	        window.scrollTo(0, val);
	        if(progress < duration) {
	            window.requestAnimationFrame(animateScroll);
	        }
	    };

	    window.requestAnimationFrame(animateScroll);
	}

	Math.easeInOutQuad = function (t, b, c, d) {
 		t /= d/2;
		if (t < 1) return c/2*t*t + b;
		t--;
		return -c/2 * (t*(t-2) - 1) + b;
	};

  </script>

  <script>
	function allowDrop(ev) {
	  ev.preventDefault();
	}

	function drag(ev) {
	  ev.dataTransfer.setData("text", ev.target.id);
	}

	function drop(ev) {
	  ev.preventDefault();
	  var data = ev.dataTransfer.getData("text");
    modules.form.apply(document.getElementById(data).getAttribute("criterion-id"));
	  document.getElementById("list-criterions").appendChild(document.getElementById(data));
	  document.getElementById("list-criterions").appendChild(document.getElementById("drop-criterion"));
	}

  function dropreset(ev) {
    ev.preventDefault();
    var data = ev.dataTransfer.getData("text");
    modules.form.unapply(document.getElementById(data).getAttribute("criterion-id"));
    document.getElementById("available-cr").appendChild(document.getElementById(data));
  }

  function endStep1 (event) {

    event.preventDefault();
    document.getElementById("step2").scrollIntoView({ block: 'start',  behavior: 'smooth' });
    modules.map.focus([latlng.lat, latlng.lng]);
  }

  function endStep2 (event) {

    event.preventDefault();

    if (!latlng || !latlng.lat || !latlng.lng) {
      document.getElementById("step1").scrollIntoView({ block: 'start',  behavior: 'smooth' });
      return;
    }

    var success = (data) => {
      document.getElementById("step3").scrollIntoView({ block: 'start',  behavior: 'smooth' });
      modules.map.compute([latlng.lat, latlng.lng], data.map);
      modules.score.compute(data.result);
    }

    $.ajax({
        url: "{{path('homepage_ajax')}}",
        type: "POST",
        contentType: "application/json",
        dataType: "json",
        data: JSON.stringify({latlng, criterions: modules.form.applied()}),
        success
    });
  }

	var selectedCriterion = null;

  </script>

